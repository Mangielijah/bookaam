<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    app:cardMaxElevation="4dp"
    app:cardCornerRadius="2dp"
    app:contentPadding="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/full_bus"
            android:id="@+id/image_bus"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:id="@+id/block"
            android:layout_below="@id/image_bus">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/agency_header">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MUSANGO BUS AGENCY"
                    android:paddingLeft="12dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="22sp"
                    android:id="@+id/agency_title"
                    android:layout_toLeftOf="@id/agency_rating"
                    android:layout_marginTop="4dp"
                    app:fontFamily="@font/berlin_sans_fb_regular"
                    android:layout_toStartOf="@id/agency_rating"
                    android:paddingStart="12dp"
                    tools:ignore="RtlSymmetry" />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agency_rating"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_alignParentRight="true"
                    android:numStars="4"
                    android:layout_marginRight="12dp"
                    android:clickable="false"
                    style="?android:attr/ratingBarStyleSmall"
                    android:rating="2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp" />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/agency_header"
                android:text="@string/book_now"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:fontFamily="@font/berlin_sans_fb_regular"
                android:background="@drawable/border_top"
                android:layout_toLeftOf="@id/agency_image"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@id/agency_image" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/bookaaam"
                android:id="@+id/agency_image"
                android:layout_below="@id/agency_header"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>