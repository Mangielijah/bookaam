<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/bg_screen5"
    app:contentPaddingTop="6dp"
    app:contentPaddingLeft="6dp"
    app:contentPaddingBottom="6dp"
    app:contentPaddingRight="0dp"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limbe -> Bamenda"
                android:textSize="17sp"
                android:textAllCaps="true"
                android:id="@+id/from_to_location"
                android:textColor="@color/white"
                android:paddingTop="2dp"
                app:fontFamily="@font/berlin_sans_fb_regular"
                android:paddingBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000 FCFA"
                android:textSize="16sp"
                android:id="@+id/fare"
                android:textColor="@color/white"
                android:paddingBottom="4dp"
                android:paddingRight="5dp"
                app:fontFamily="@font/berlin_sans_fb_regular"
                android:layout_below="@id/from_to_location"
                android:paddingEnd="5dp"
                tools:ignore="RtlSymmetry"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIP"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:id="@+id/type"
                app:fontFamily="@font/berlin_sans_fb_regular"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="4dp"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/available_seats"
                    android:textColor="@color/dot_dark_screen2"
                    android:textSize="18sp"
                    android:id="@+id/seatText"
                    android:background="@drawable/nav_header_border"
                    app:fontFamily="@font/berlin_sans_fb_regular"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seatText"
                    android:text="Morning: 40 left\nAfternoon: 35 left\nNight: 50 left"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="17sp"
                    android:id="@+id/seatLeft"
                    app:fontFamily="@font/berlin_sans_fb_regular"
                    />
            </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
