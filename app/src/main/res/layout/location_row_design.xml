<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:contentPadding="6dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limbe -> Bamenda"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:id="@+id/from_to_location"
            android:textColor="@color/white"
            android:paddingTop="2dp"
            app:fontFamily="@font/berlin_sans_fb_regular"
            android:paddingBottom="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6000"
            android:textSize="16sp"
            android:id="@+id/fare"
            android:textColor="@color/white"
            android:paddingBottom="4dp"
            android:paddingRight="5dp"
            android:textStyle="italic"
            app:fontFamily="@font/berlin_sans_fb_regular"
            android:layout_below="@id/from_to_location"
            android:paddingEnd="5dp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fcfa"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:layout_toEndOf="@id/fare"
            android:layout_toRightOf="@id/fare"
            android:layout_below="@id/from_to_location"
            android:paddingBottom="4dp"
            app:fontFamily="@font/berlin_sans_fb_regular"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
