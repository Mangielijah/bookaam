<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".Account.SignUpActivity">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appname"
        android:text="@string/app_name"
        android:textColor="@color/white"
        app:fontFamily="@font/berlin_sans_fb_regular"
        android:textSize="42sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appname"
        android:id="@+id/scrollview"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:hintAnimationEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:paddingBottom="12dp"
                    android:textSize="20sp"
                    app:fontFamily="@font/berlin_sans_fb_regular" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:hintAnimationEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/usernumber"
                    android:hint="@string/phone_number"
                    android:inputType="phone|number"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:paddingBottom="12dp"
                    android:textSize="20sp"
                    app:fontFamily="@font/berlin_sans_fb_regular"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:hintAnimationEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:drawableLeft="@android:drawable/sym_action_email"
                    android:backgroundTint="@color/white"
                    android:paddingBottom="12dp"
                    android:textSize="20sp"
                    app:fontFamily="@font/berlin_sans_fb_regular"
                    android:drawableStart="@android:drawable/sym_action_email" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:hintAnimationEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:paddingBottom="14dp"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                    android:textSize="20sp"
                    app:fontFamily="@font/berlin_sans_fb_regular"
                    android:drawableStart="@android:drawable/ic_lock_idle_lock" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/btn_primary_bk"
        android:layout_below="@id/scrollview"
        android:textColor="@color/white"
        android:text="@string/create_your_account"
        android:textAllCaps="false"
        android:id="@+id/create_acc_btn"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/already_signed_up_log_in"
        android:id="@+id/goto_login_textview"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        />

</RelativeLayout>